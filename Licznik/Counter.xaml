<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Licznik.Counter"
             Title="Counter">
    
    <VerticalStackLayout>
        <Label 
            x:Name="CounterLabel"
            Text="0"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button
            x:Name="CounterBtn60"
            Text="Kliknij +1" 
            Clicked="ClickedBtn"
            HorizontalOptions="Fill" />
       
        <Button
       x:Name="CounterBtn59"
       Text="Kliknij -1" 
       Clicked="ClickedBtnMin"
       HorizontalOptions="Fill" />

        <Button
x:Name="CounterBtnSave"
Text="zapisz wartosc licznika" 
Clicked="ClickedSave"
HorizontalOptions="Fill" />

    </VerticalStackLayout>
</ContentPage>